<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeSchedule">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/background_gradient"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="120dp"
        android:id="@+id/layoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_white"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_bidan"
            android:visibility="gone"
            android:text="@string/id_bidan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"/>
        <!-- Name Label -->
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Tutup"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:textSize="17dip"/>
        <!-- Input Name -->
        <EditText
            android:id="@+id/txt_jam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:hint="Jam" />
        <!-- Price Label -->
       <!-- <TextView
            android:id="@+id/outtp1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="OUT"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:textSize="17dip"/>-->
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Opsi"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:textSize="17dip"/>


        <!-- Input description -->
       <RadioGroup
            android:id="@+id/rdopsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

           <RadioButton
               android:id="@+id/rd1"
               android:layout_width="56dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:paddingLeft="5dp"
               android:text="@string/buka"
               android:textColor="#fff" />
           <TextView
               android:id="@+id/tvbuka"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Buka"
               android:layout_toLeftOf="@id/rd1"
               android:layout_gravity="center"
               android:textSize="17dip"/>

            <RadioButton
                android:id="@+id/rd2"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center"
                android:text="@string/tutup"
                android:textColor="#fff"/>
           <TextView
               android:id="@+id/tvtutup"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="Tutup"
               android:layout_toLeftOf="@id/rd2"
               android:textSize="17dip"/>
        </RadioGroup>
        <Button
            android:id="@+id/btn_change"
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:text="Update Jadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageVIew"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bidancare"
        android:background="@drawable/background_white"
        android:padding="5dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />


</RelativeLayout>